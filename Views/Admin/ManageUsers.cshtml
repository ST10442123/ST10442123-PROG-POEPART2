@model IEnumerable<(string Email, string Roles)>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="container mt-4">
    <h2 class="mb-3"><i class="bi bi-people"></i> Manage Users</h2>

    <table class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>Email</th>
                <th>Role(s)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.Email</td>
                    <td>@u.Roles</td>
                </tr>
            }
        </tbody>
    </table>
</div>

