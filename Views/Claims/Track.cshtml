@model IEnumerable<CMCS1.Models.Claim>
@{
    ViewData["Title"] = "Track Claims";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4 py-3">
                    <h3 class="mb-0"><i class="bi bi-graph-up-arrow"></i> Track Your Claims</h3>
                </div>
                <div class="card-body p-4">
                    @if (!Model.Any())
                    {
                        <div class="alert alert-info text-center" role="alert">
                            <i class="bi bi-info-circle"></i> You have not submitted any claims yet.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light border-bottom">
                                    <tr class="text-center">
                                        <th><i class="bi bi-calendar-event"></i> Date</th>
                                        <th><i class="bi bi-clock-history"></i> Hours</th>
                                        <th><i class="bi bi-cash-coin"></i> Total (R)</th>
                                        <th><i class="bi bi-flag"></i> Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var c in Model)
                                    {
                                        var badge = c.Status switch
                                        {
                                            CMCS1.Models.ClaimStatus.Approved => "badge bg-success",
                                            CMCS1.Models.ClaimStatus.Rejected => "badge bg-danger",
                                            _ => "badge bg-warning text-dark"
                                        };
                                        <tr class="text-center">
                                            <td>@c.DateSubmitted.ToString("yyyy-MM-dd HH:mm")</td>
                                            <td>@c.HoursWorked</td>
                                            <td class="fw-semibold">@string.Format("{0:N2}", c.TotalAmount)</td>
                                            <td><span class="@badge px-3 py-2 rounded-pill">@c.Status</span></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
                <div class="card-footer text-center bg-light py-3 rounded-bottom-4">
                    <small class="text-muted"><i class="bi bi-info-circle"></i> Track the progress of your submitted claims in real-time.</small>
                </div>
            </div>
        </div>
    </div>
</div>
