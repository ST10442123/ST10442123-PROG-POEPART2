@model CMCS1.Models.Claim
@{
    ViewData["Title"] = "Submit Monthly Claim";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
                    <h3 class="mb-0"><i class="bi bi-file-earmark-text"></i> Submit Monthly Claim</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="Claims" asp-action="Submit" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="LecturerName" class="form-label fw-semibold"><i class="bi bi-person-circle"></i> Lecturer Name</label>
                            <input asp-for="LecturerName" class="form-control form-control-lg" placeholder="Enter your full name" />
                            <span asp-validation-for="LecturerName" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="HoursWorked" class="form-label fw-semibold"><i class="bi bi-clock-history"></i> Hours Worked</label>
                                <input asp-for="HoursWorked" type="number" step="0.1" min="0" class="form-control form-control-lg" />
                                <span asp-validation-for="HoursWorked" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="HourlyRate" class="form-label fw-semibold"><i class="bi bi-cash-coin"></i> Hourly Rate (R)</label>
                                <input asp-for="HourlyRate" type="number" step="0.01" min="0" class="form-control form-control-lg" />
                                <span asp-validation-for="HourlyRate" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label fw-semibold"><i class="bi bi-chat-left-text"></i> Additional Notes</label>
                            <textarea asp-for="Notes" class="form-control form-control-lg" rows="3" placeholder="Enter any additional details or context..."></textarea>
                            <span asp-validation-for="Notes" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold"><i class="bi bi-paperclip"></i> Upload Supporting Document</label>
                            <input type="file" name="uploadedFile" class="form-control form-control-lg" accept=".pdf,.doc,.docx,.xlsx" />
                            <div class="form-text">Accepted formats: PDF, DOC, DOCX, XLSX</div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-lg btn-success px-5">
                                <i class="bi bi-send-fill"></i> Submit Claim
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center bg-light py-3 rounded-bottom-4">
                    <small class="text-muted"><i class="bi bi-info-circle"></i> Ensure all fields are completed accurately before submission.</small>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

